<?xml version="1.0" encoding="UTF-8" ?>

<configuration>

    <property name="LOG_PATH" value="logs"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n
            </pattern>
        </encoder>
    </appender>


    <appender name="FILE1" class="ch.qos.logback.core.FileAppender">

        <file>${LOG_PATH}/log.log</file>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %-5level %logger{36}.%M - %msg%n
            </Pattern>
        </encoder>

    </appender>

    <appender name="FILE2" class="ch.qos.logback.core.FileAppender">

        <file>${LOG_PATH}/error.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} %logger{36}.%M Message: %msg%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="com.example.User_Managment.User.services.UserService" additivity="false" level="debug">
        <appender-ref ref="FILE1"/>
    </logger>

    <logger name="com.example.User_Managment.RestExceptionHandler" additivity="false" level="debug">
        <appender-ref ref="FILE2"/>
    </logger>


    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
